---
// Component Imports
import BaseHead from '../../../components/BaseHead.astro';
import BlogHeader from '../../../components/BlogHeader.astro';
import PrismicContent from '../../../components/PrismicContent.astro';
import PrismicText from '../../../components/PrismicText.astro';
import { client } from '../../../prismic.ts';

const previewCookie = Astro.cookies.get("io.prismic.preview")?.value;

if (!previewCookie) {
  return Astro.redirect("/404");
}

const page = await client.getByUID('page', 'home', { pageSize: 1, page: 1, ref: previewCookie });

if (!page) return Astro.redirect("/404");

const doc = page;

let title = 'Miles of Code';
let description = 'The best blog in the Spiderverse';
let permalink = 'https://example.com/';
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
    <link rel="stylesheet" href="/blog.css" />

    <style>
      body {
        width: 100%;
        display: grid;
        grid-template-rows: 3.5rem 1fr;
        --gutter: 0.5rem;
        --doc-padding: 2rem;
      }

      header {
        width: 100%;
        height: 100%;
        background-color: var(--theme-bg-offset);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .content {
        margin-top: 4rem;
        margin-bottom: 8rem;
      }

      .content :global(main > * + *) {
        margin-top: 1rem;
      }

      .intro {
        padding-bottom: 4rem;
        margin-bottom: 2rem;
        border-bottom: 4px solid var(--theme-divider);
      }

      .intro > * {
        margin: 0;
      }

      .latest {
        font-size: 2.5rem;
        font-weight: 700;
      }
    </style>
  </head>

  <body>
    <BlogHeader />
    <div class="layout">
      <article class="content">
        <section class="intro">
          <h1 class="latest"><PrismicText content={doc.data.heading} /></h1>
          <p>{description}</p>
        </section>
        <section>
          <PrismicContent content={doc.data.body1} />
        </section>
      </article>
    </div>
  </body>
</html>
